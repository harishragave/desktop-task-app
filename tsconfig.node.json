{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": ["node"],
    "noEmit": false,
    "outDir": "./dist-electron"
  },
  "include": ["vite.config.ts", "electron/**/*"],
  "exclude": ["node_modules"]
}
